#:kivy 2.3.0
<Penduduk>:
    Screen:
        Button:
            size_hint: None, None
            height: 40
            width: 40
            background_normal: ''
            background_color: 1, 1, 1, 1
            padding_x: 50
            pos_hint: {'center_x':.1, 'center_y':.9}
            on_press:
                app.root.current = 'datapenduduk'
            Image:
                source: 'asset/back.png'
                size_hint: None, None
                size: self.parent.width * 1.0, self.parent.height * 1.0
                pos: self.parent.center_x - self.width / 2, self.parent.center_y - self.height / 2
        Label:
            text:"Penduduk"
            font_size:"32dp"
            halign:"center"
            pos_hint: {'center_y':.87}
            color:"#8366DD"
